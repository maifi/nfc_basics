<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <ScrollView
        android:id="@+id/ScrollView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/button_getUid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="getUidPressed"
                android:text="getUID" />

        
    

    <EditText
        android:id="@+id/tf_Challenge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/button_getChallenge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="getChallengePressed"
        android:text="getChallenge" />

    <EditText
        android:id="@+id/tf_cert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10" />

    <Button
        android:id="@+id/button_getCert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="getCertPressed"
        android:text="getCert" />

    <EditText
        android:id="@+id/tf_uid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10" />

    <Button
        android:id="@+id/but_keyagree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="startDHAgreement"
        android:text="DH-keyagreement" />

    <EditText
        android:id="@+id/tf_dh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textMultiLine" />
    </LinearLayout>
</ScrollView>
</LinearLayout>